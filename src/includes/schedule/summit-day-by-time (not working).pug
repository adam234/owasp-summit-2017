mixin show-session-at-time
    | {% for session in day_Data[time]              %}
    div
        a(href="{{session.url}}") {{ session.name }}
    .track-info {{ time}} : {{ session.track }}
    | {% endfor                                     %}

mixin show-room
    | {% assign day_Data = site.data.mapped.schedule.by_Day[page.day][room] %}
    td
        h4 {{ room }}
    td
        + show-session-at-time
        | {% assign time = 'AM-1'  %}
    td
        + show-session-at-time
        | {% assign time = 'PM-1'  %}
    td
        + show-session-at-time
        | {% assign time = 'PM-2'  %}
    td
        + show-session-at-time
        | {% assign time = 'PM-3'  %}
    td
        + show-session-at-time
        | {% assign time = 'Eve'  %}
    td
        + show-session-at-time
        | {% assign time = 'no-time'  %}


.page-content
    .container
        .schedule
            h3 {{ page.title }}
                p
                    a(href='/pages/schedule') Back to schedule list

            table.table
                thead
                    th.text-center
                        h4 (room)
                    th.text-center
                        h4 Room 1
                    th.text-center
                        h4 Room 2
                    th.text-center
                        h4 Room 3
                    th.text-center
                        h4 Room 4
                    th.text-center
                        h4 Room 5
                    th.text-center
                        h4 Villa 1
                    th.text-center
                        h4 (no-location)
                tr
                    | {% assign room = 'Room-1'  %}
                    + show-room
                tr
                    | {% assign room = 'Room-2'  %}
                    + show-room
                tr
                    | {% assign room = 'Room-3'  %}
                    + show-room
                tr
                    | {% assign room = 'Room-4'  %}
                    + show-room
                tr
                    | {% assign room = 'Room-5'  %}
                    + show-room
                tr
                    | {% assign room = 'Villa-1'  %}
                    + show-room
                tr
                    | {% assign room = 'no-location'  %}
                    + show-room