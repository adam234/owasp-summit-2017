mixin add-day-link
    | {% if page.day == day_Key %}
    span.day_Title {{ day_Text }}
    | {% else %}
    a(href='./{{ day_Key }}.html'   ) {{ day_Text }}
    | {% endif %}
    span &#32;|&#32;

mixin add-days-links
    b Daily Schedule: &#32;&#32;&#32;
        | {% assign day_Text = 'Monday' %}
        | {% assign day_Key  = 'Mon'     %}
        + add-day-link
        | {% assign day_Text = 'Tuesday' %}
        | {% assign day_Key  = 'Tue'     %}
        + add-day-link
        | {% assign day_Text = 'Wednesday' %}
        | {% assign day_Key  = 'Wed'     %}
        + add-day-link
        | {% assign day_Text = 'Thursday' %}
        | {% assign day_Key  = 'Thu'     %}
        + add-day-link
        | {% assign day_Text = 'Friday' %}
        | {% assign day_Key  = 'Fri'     %}
        + add-day-link

